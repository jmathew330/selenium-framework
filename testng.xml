<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="SeleniumAutomationSuite" verbose="2" thread-count="3">

    <!-- Login Tests -->
    <test name="LoginTests">
        <classes>
            <class name="tests.LoginTests"/>
        </classes>
    </test>

    <!-- Products / Inventory Tests -->
    <test name="ProductsTests">
        <classes>
            <class name="tests.ProductsTests"/>
        </classes>
    </test>

    <!-- Checkout / E2E Tests -->
    <test name="CheckoutTests">
        <classes>
            <class name="tests.CheckoutTests"/>
        </classes>
    </test>

</suite>
